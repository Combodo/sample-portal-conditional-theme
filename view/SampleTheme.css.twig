/* Replace the background color of the user card with a background image for Portal power users */
@media (min-width: 768px) {
    .user_card {
        background-color: #00294b;
        background-image: url('../../../extensions/sample-portal-conditional-theme/assets/img/geometric-generated.svg');
        background-size: 218.75%;
        background-position-x: 95%;
        background-position-y: 85%;
        box-shadow: -3px 2px 3px rgba(0, 0, 0, 0.4);
    }
}